

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(GUEST)  //CHANGE IT LATERRR TO GUEST
  isActive  Boolean  @default(true)
  lastLoginAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  GUEST
}


model PortfolioInfo {
  id           Int      @id @default(autoincrement())
  email        String?  //? means optional
  phone        String?
  location     String?
  profileImage String?
  socialLinks  Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}



model HeroSection {
  id                Int      @id @default(autoincrement())
  bio               String   @db.Text  //this is for long text (database annotation)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}



model AboutSection {
  id              Int      @id @default(autoincrement())
  bio             String   @db.Text
  imageUrl        String
  specialization  String
  education       String
  documents       Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


model Experience {
  id               Int      @id @default(autoincrement())
  title            String
  company          String
  location         String
  duration         String
  period           String
  type             String
  responsibilities Json
  technologies     Json
  color            String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model EducationCard {
  id            Int       @id @default(autoincrement())
  link          String
  collageImage  String
  collageName   String
  course        String
  duration      String
  subjects      Json
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}


model Skill {               //prisma model name
  id          Int           @id @default(autoincrement())
  name        String?       @unique  @db.VarChar(100)
  proficiency Int?           
  category    SkillCategory?
  icon        String?       @db.VarChar(100)
  color       String?        @db.VarChar(20)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  @@map("Skills")             // database model name
}

enum SkillCategory {
  FRONTEND
  BACKEND
  DATABASE
  DEVOPS
  OTHERS
}


model MinorProject {
  id        Int      @id @default(autoincrement())
  header    String
  html_url  String
  image     String
  content   String
  type      String   @default("minor")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("minor_projects")
}

model MajorProject {
  id           Int      @id @default(autoincrement())
  title        String
  description  String   @db.Text
  image        String
  liveUrl      String
  githubUrl    String?
  technologies String[] // PostgreSQL array type
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("major_projects")
}




