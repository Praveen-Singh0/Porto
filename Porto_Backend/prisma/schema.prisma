

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model PortfolioInfo {
  id           Int      @id @default(autoincrement())
  email        String?  //? means optional
  phone        String?
  location     String?
  profileImage String?
  socialLinks  Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}



model HeroSection {
  id                Int      @id @default(autoincrement())
  bio               String   @db.Text  //this is for long text (database annotation)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}



model AboutSection {
  id              Int      @id @default(autoincrement())
  bio             String   @db.Text
  imageUrl        String
  specialization  String
  education       String
  documents       Json
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}


model Experience {
  id               Int      @id @default(autoincrement())
  title            String
  company          String
  location         String
  duration         String
  period           String
  type             String
  responsibilities Json
  technologies     Json
  color            String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}



